<div class="dashboard-related-content">
	<% @gamifications.each do |gamification| %>
		<% if gamification.active_rewards.exists? && gamification.user_score(@user) > 0 %>

			<div class="clear"></div>
			<div class="related-content padding">
				<h2 class="inline-block">
					<%= gamification.title %>
					<span>
						(<%= t("users.show.rewards.points", points: gamification.user_score(@user) )%>)
					</span>
				</h2>
			</div>
			<div class="clear"></div>

			<div data-equalizer="gamification_rewards" data-equalize-on="medium">
				<%= render partial: "gamification_reward", collection: gamification.active_rewards %>
			</div>
		<% end %>
	<% end %>
</div>

