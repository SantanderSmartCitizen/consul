<% if @action.process_type.present? && 
  @action.operation.present? && 
  ["create", "create_proposal"].exclude?(@action.operation) %>

  <div class="gamification-action-processes-form">
    <% case @action.process_type 
       when "debate" %>
        <%= render "admin/gamification/actions/processes/debates/search" %>
    <% when "proposal" %>
        <%= render "admin/gamification/actions/processes/proposals/search" %>
    <% when "poll" %>
        <%= render "admin/gamification/actions/processes/polls/search" %>
    <% when "process" %>
        <%= render "admin/gamification/actions/processes/processes/search" %>
    <% when "forum" %>
        <%= render "admin/gamification/actions/processes/forums/search" %>
    <% end %>
  </div>
<% else %>
  <div class="callout primary margin">
    <%= t("admin.gamification.actions.show.cannot_be_configured") %>
  </div>
<% end %>
