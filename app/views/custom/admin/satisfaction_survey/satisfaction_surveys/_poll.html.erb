<tr id="<%= dom_id(poll) %>" class="poll">
  <td>
    <strong>
      <%= link_to poll.name, admin_satisfaction_survey_path(poll) %>
    </strong>
  </td>
  <td>
    <%= link_to t("admin.actions.edit"),
                edit_admin_satisfaction_survey_path(poll),
                class: "button mb-2" %>

    <%= link_to t("admin.actions.delete"),
            admin_satisfaction_survey_path(poll),
            method: :delete,
            "data-confirm": t("admin.polls.destroy.alert"),
            class: "button alert mb-2" %>

    <%= link_to t("admin.actions.configure"),
                admin_satisfaction_survey_path(poll),
                class: "button mb-2" %>
  </td>
</tr>
