<div class="row margin-top text-center pr-10p pl-10p" style="margin-left: 20px; margin-right: 20px;width: auto;">

	<div class="card-deck">

		<% @feeds.each do |feed| %>

			<!-- Propuestas Ayuntamiento -->

			<% if feed_city_hall_proposals_enabled? && feed_city_hall_proposals?(feed) %>
				<% feed.items.each do |item| %>
					<div class="col-12 col-md-6 col-lg-4">
						<div class="card h-100">
							<div class="card-header bg-transparent feature-title">
								<h2><%= t(".city_hall_proposals.title") %></h2>
							</div>
						    <%= image_tag(image_path_for("feature-1.jpg"), style: "", alt: "Proceso", class: "card-img-top") %>
						    <div class="card-body">
								<h5 class="card-title"><%= item.title %></h5>
								<p class="card-text"><%= item.summary %></p>	
						    </div>
						    <div class="card-footer bg-transparent">
						    	<div style="min-height: 5em;">
									<%= link_to t(".city_hall_proposals.see_button"), url_for(item), class: "button" %>
								</div>
							  	<div style="min-height: 8em;">
						          <%= link_to t(".city_hall_proposals.see_all_button"), proposals_path("advanced_search[user_profile]": "city_hall"), class: "button main-button" %>
								</div>
						    </div>
						</div>
					</div>
				<% end %>
			<% end %>

			<!-- Propuestas ciudadanos -->

			<% if feed_citizen_proposals_enabled? && feed_citizen_proposals?(feed) %>
				<% feed.items.each do |item| %>
					<div class="col-12 col-md-6 col-lg-4">
						<div class="card h-100">
							<div class="card-header bg-transparent feature-title">
								<h2><%= t(".citizen_proposals.title") %></h2>
							</div>
						    <%= image_tag(image_path_for("feature-2.jpg"), style: "", alt: "Proceso", class: "card-img-top") %>
						    <div class="card-body">
								<h5 class="card-title"><%= item.title %></h5>
								<p class="card-text"><%= item.summary %></p>	
						    </div>
						    <div class="card-footer bg-transparent">
						    	<div style="min-height: 5em;">
									<%= link_to t(".citizen_proposals.see_button"), url_for(item), class: "button" %>
								</div>
							  	<div style="min-height: 8em;">
						          <%= link_to t(".citizen_proposals.see_all_button"), proposals_path("advanced_search[user_profile]": "citizen"), class: "button main-button" %>
								</div>
						    </div>
						</div>
					</div>
				<% end %>
			<% end %>

			<!-- Procesos abiertos -->

			<% if feed_processes_enabled? && feed_processes?(feed) %>
				<% feed.items.each do |item| %>
					<div class="col-12 col-md-6 col-lg-4">
						<div class="card h-100">
							<div class="card-header bg-transparent feature-title">
								<h2><%= t(".open_processes.title") %></h2>
							</div>
						    <%= image_tag(image_path_for("feature-3.jpg"), style: "", alt: "Proceso", class: "card-img-top") %>
						    <div class="card-body">
								<h5 class="card-title"><%= item.title %></h5>
								<p class="card-text"><%= item.summary %></p>	
						    </div>
						    <div class="card-footer bg-transparent">
						    	<div style="min-height: 5em;">
									<%= link_to t(".open_processes.see_button"), url_for(item), class: "button" %>
								</div>
							  	<div style="min-height: 8em;">
						          <%= link_to t(".open_processes.see_all_button"), legislation_processes_path, class: "button main-button" %>
								</div>
						    </div>
						</div>
					</div>
				<% end %>
			<% end %>


		<% end %>

	</div>
</div>