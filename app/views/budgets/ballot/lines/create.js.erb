$("#progress_bar").html("<%= j render("/budgets/ballot/progress_bar", ballot: @ballot) %>");
$("#sidebar").html("<%= j render("/budgets/investments/sidebar") %>");

<% if params[:show_in_table].present? %>
	<% ballot_route="/budgets/ballot" %>
<% else %>
	<% ballot_route="/budgets/investments/ballot" %>
<% end %>

$("#<%= dom_id(@investment) %>_ballot").html("<%= j render(ballot_route,
                                                           investment: @investment,
                                                           investment_ids: @investment_ids,
                                                           ballot: @ballot) %>");

<%= render "refresh_ballots",
            investment: @investment,
            investment_ids: @investment_ids,
            ballot: @ballot,
            ballot_route: ballot_route %>

App.Map.initialize();
